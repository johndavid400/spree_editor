<%= javascript_include_tag Ckeditor.cdn_url %>

<script>
  $(function() {
    <% ids.each do |id| %>
      if ($("#<%= id %>").length > 0) {
        CKEDITOR.replace("<%= id %>", {
          filebrowserBrowseUrl: "/ckeditor/pictures",
          filebrowserImageBrowseUrl: "/ckeditor/pictures",
          filebrowserImageUploadUrl: "/ckeditor/pictures",
          filebrowserUploadUrl: "/ckeditor/pictures",
        });
      }
    <% end %>
  });
</script>
